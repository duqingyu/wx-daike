/* pages/nearby/nearby.wxss */
.headers{
  font-size: 16px;
  color: green;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50px;
}
.headers icon{
  margin-right:4px;
}
.header{
  width: 100%;
  height: 20px;
  font-family: "宋体";
  font-size: 15px;
  color:	#d0d0d0;
  border-bottom: 1px #5B5B5B solid;
  line-height:20px;
  text-align: center;
}
.total{
display: flex;
flex-direction: row;
margin: 5px;
border-bottom: 1px #5B5B5B solid;
width: 100%;
}
.total image{
  width: 50px;
  height: 50px;
}
.datas{
  display: flex;
  flex-direction: column;
  margin-left: 3px;
}
.username{
font-size: 15px;
color: 	#003D79;
font-family: '微软雅黑';
display: flex;
flex-direction: row;
}
.username image{
  width: 15px;
  height: 15px;
}
.distance{
font-size: 12px;
color:	#5B5B5B;
margin-top: 7px;
}
