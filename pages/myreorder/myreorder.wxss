/* pages/myreorder/myreorder.wxss */
page{
  background-color: 	#F0F0F0;
  height:100%;
}
.swiper-tab{ 
 width: 100%; 
 text-align: center; 
 line-height: 80rpx; 
 border-bottom: 1px solid #000; 
 display: flex; 
 flex-direction: row; 
 justify-content: center; 
} 
.tab-item{ 
 flex: 1; 
 font-size: 30rpx; 
 display: inline-block;  
 color: #777777; 
} 
.on{ 
 color:	#005AB5; 
 border-bottom: 5rpx solid 	#005AB5; 
} 
.refesh{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  margin:2px;
}
.refesh text{
  font-size:16px;
  color: green;
  margin-left:3px;
}
.container{
  margin-top:10px;
}
.scroll-view{
margin:25px;
text-align:center;
margin-left: 2px;
}
.total{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  
}
.total1{
 width:  25%;
 height: 40px;
 text-align:center;
 line-height:50px;
 background-color: white;
 border-radius: 2%;
 border-bottom: 1px #BEBEBE solid;
 border-right:  1px #BEBEBE solid;
 color: 	#9D9D9D;
 font-size: 13px;
}
.total2{
 width: 65%;
 height: 40px;
 text-align:center;
 align-items: center;
 justify-content: center;
 line-height:40px;
 background-color: white;
 border-radius: 2%;
 border-bottom: 1px #BEBEBE solid;
 font-size: 13px;
 display: flex;
}
.avatar{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 8px;
}
.beizhu{
  width: 90%;
  height: 40px;
  text-align:center;
  line-height:40px;
  background-color: white;
  border-radius: 2%;
  border-bottom: 1px #BEBEBE solid;
  font-size: 17px;
  color:#9D9D9D;
}
.beizhu1{
  width: 90%;
  height: 80px;
  background-color: white;
  border-radius: 2%;
  border-bottom: 1px #BEBEBE solid;
}
.beizhu1 text{
  margin-top: 20px;
  font-size: 15px;
  white-space:normal;
   float:left;
  margin-left: 10px;
  font-family: "微软雅黑";
}
.school{
  width: 90%;
  height: 25px;
  line-height:25px;
  background-color: white;
  border-radius: 2%;
  border-bottom: 1px #BEBEBE solid;
  font-size: 13px;
  color:#9D9D9D;
}
.schoollist{
  float: left;
  margin-left: 5px;
}
.status{
  float:right;
  color:red;
  margin-right: 3px;
}
.people{
  width: 90%;
  height: 25px;
  color: 	#004B97;
  background: linear-gradient(to right,		#2894FF,	#FCFCFC,	#2894FF);
  border-radius: 2%;
  border-bottom: 1px #BEBEBE solid;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}